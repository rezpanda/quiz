<script>
   function confirmPassword() {
      var pw1 = document.getElementById('user_password').value;
      var pw2 = document.getElementById('user_confirm_password').value;
      if (!pw1 || !pw2) {
         alert('Debe rellenar los campos de Contraseña y Confirmación.');
         return false;
      }
      if (pw1 === pw2) {
         return true;
      } else {
         alert('Las contraseñas introducidas no coinciden.');
         return false;
      }
   }
</script>

<div>
	<% if ( ! user.id) { %>
		<label for="preg" class="rem">Nombre de usuario:</label>
		<input type="text" id="username" name="user[username]" value="<%= user.username %>"/><p>
	<% } else { %>
		Nombre de usuario: <%= user.username %>
	<% } %>
</div>

<div>
	<label for="user_password" class="rem">Contraseña:</label>
	<input type="password" id="user_password" name="user[password]"/> <p>
</div>

<div>
	<label for="user_confirm_password" class="rem">Confirmar Contraseña:</label>
	<input type="password" id="user_confirm_password" /> <p>
</div>


<div>
	<a href="/"><button type="button">Cancelar</button></a>
</div>

<div>
	<input type="submit" value="Guardar" onclick="return confirmPassword()">
</div>